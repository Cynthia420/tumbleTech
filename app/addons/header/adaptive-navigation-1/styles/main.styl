//////////////////////////
//Adaptive Navigation #1//
//////////////////////////

//Colors

$bg = #eae3ea

$logo = #eae3ea

$link = #3c3c3c

$link-hover = #b4dbc0

$nav-bg = #b56357

//Default

*
  padding: 0
  margin: 0
  border: 0
  color: #4d4861


body
  font-family: "open-sans", sans-serif;
  background-color: $bg
  width: 100%

h1
  color: $logo
  weight 300

a
  text-decoration: none;
  color: inherit;

figure
  margin: 0
  padding: 0

.content
  position: relative;
  z-index: 2
  background-color: white
  margin-bottom: 400px

  article
    padding: 100px 0
    max-width: 640px
    margin: 0 auto
    text-align: center;

img
  max-width: 100%
  padding: 0
  margin: 0

.height
  height: 2000px

//Header

header
  background-color: $nav-bg
  height: 200px
  width: 100%
  overflow: hidden;

//Logo

  .logo
    font-size: 60px
    line-height: 200px
    color $logo
    width: 20%
    display: block;
    height: 200px
    text-align: center;
    transition: all 0.2s
    z-index: 5
    position: absolute;
    left: 20px
    float: right;
    text-align: left;

//Mobile-Button

  .mobile-nav-toggle
    width: 20%
    height: 50px
    margin-left: 80%
    //background-color: pink
    display: none;
    align-items: center;
    cursor: pointer;
    z-index: 5
    position: absolute;
    float: right;
    top 25px
    right -20%
    margin-right: 70px

    span,
    span:before,
    span:after
      content: ""
      height: 1px
      width: 50px
      display: block;
      background-color: $logo
      position: relative;
      transition: all 0.3s

    span:before
      top 15px
      height: 1px

    span:after
      top -17px
      height: 1px

    &.is-open span
      background: transparent

    &.is-open span:before,
    &.is-open span:after
      transform-origin: center;
      transform: rotate(45deg);
      top 0

    &.is-open span:after
      transform: rotate(-45deg);

//Nav

  nav
    height: 200px
    float: right;
    width: 75%
    display: block;
    transition: all 0.3s ease-in-out

    ul
      height: 200px
      width 600px
      position: absolute;
      right: 0
      display: block;


      li
        list-style: none;
        display: inline-block;
        text-decoration: none;
        color $link
        text-align: center;
        line-height: 200px;
        font-size: 30px;
        font-weight: lighter;
        width: 150px

        &:hover
          color: $link-hover

//Mobile Nav

.mobile-nav
  display: none;
  position: absolute;
  width: 100%
  background-color: $nav-bg
  padding 30px 0 20px
  transform: translateY(-100%);
  transition: all 0.5s ease-in-out
  display: block;


  ul
    list-style: none;
    margin: 0
    padding: 50px 0 0

  li
    display: block;
    height: 75px
    width: 100%;
    line-height: 75px
    font-size: 30px
    font-weight 300
    color $link
    text-align: center;

    a
      width: 100%
      height: 75px
      display: block;
      cursor: pointer;

    &:hover
      color: $link-hover
      height: 75px
      display: block;
      position: relative;
      z-index: 999

    &:hover .underline
      width: 40%
      background: $link-hover

    .underline
      width: 50%
      height: 1px
      background: $link
      margin: auto;
      transition: all 0.3s

//Media Querys

@media (max-width: 805px)
  header
    width auto;
    background-color: $nav-bg
    height: 100px

    .logo
      line-height: 100px
      font-size: 40px
      height: 100px
      width: 100%
      position: absolute;
      left: -100%
      margin-left: 80px
      text-align: right;

    .header-center
      width 0%

    nav
      width: 0%

      ul
        display: none;
        li
          display: none;

    .mobile-nav-toggle
      display: flex;

  .mobile-nav.is-open
    transform: translateY(0%);
